@model smartTechAuthenticator.ViewModels.PlansViewModel
@{
    ViewBag.Title = "CreatePlans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .text-end {
        text-align: left !important;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Plan</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Plans")">Plan</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Plans
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("CreatePlans", "Plans", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                    <div class="card-body">
                        <h4 class="card-title">Plan Information</h4>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.PlanName, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.PlanName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.PlanName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Price, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Validity, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Validity, new { @class = "form-control" })
                            </div>
                        </div>

                       

                    </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@Url.Action("Index","Plans" )" class="btn btn-danger" style="float: right;margin:5px">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right; margin: 5px">
                                Submit
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




